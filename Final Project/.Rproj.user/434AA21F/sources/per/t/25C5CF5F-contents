cb_palette = c("#CD6155", "#AF7AC5", "#7FB3D5", "#76D7C4", "#F7DC6F", "#EDBB99", "#B3B6B7", "#1C2833", "#D55E00", "#CC79A7")
cb_palette2 = c("#006400","#FFFF00", "#0000FF","#FF0000")
